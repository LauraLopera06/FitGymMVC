@model List<FitGymMVC.Models.UsuariosModel>
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>FitGym Usuarios</title>
    <link rel="stylesheet" href="~/css/ListarRutinas.css" />
</head>
<body>
    <div class="contenedor-central">
        <div class="encabezado-morado">
            <h2>Usuarios Registrados</h2>
        </div>

        <div class="cuadro-blanco-scroll">
            @foreach (var usuario in Model)
            {
                <div class="item-clase">
                    <div style="display: flex; flex-direction: column;">
                        <strong style="font-size: 16px; color: #8000aa;">@usuario.Nombre</strong>
                        <span style="font-size: 15px; color: #555;">
                            Cédula: @usuario.Cedula
                        </span>
                        <span style="font-size: 15px; color: #555;">
                            Teléfono: @usuario.Telefono
                        </span>
                        <span style="font-size: 15px; color: #555;">
                            Correo: @usuario.Correo
                        </span>
                        <span style="font-size: 15px; color: #555;">
                            Edad: @usuario.Edad
                        </span>
                    </div>
                </div>
            }
        </div>

        <div class="botones">
            <a asp-controller="Usuarios" asp-action="InicioUsuario" class="btn salir">SALIR</a>
        </div>
    </div>
</body>
</html>
