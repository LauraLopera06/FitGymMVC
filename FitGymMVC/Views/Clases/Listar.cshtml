@model List<FitGymMVC.Models.ClasesModel>

@{
    ViewData["Title"] = "Lista de Clases";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>FitGym Clases</title>
    <link rel="stylesheet" href="~/css/ListarRutinas.css" />
</head>
<body>
    <div class="contenedor-central">
        <div class="encabezado-morado">
            <h2>Clases Registradas</h2>
        </div>

        <div class="cuadro-blanco-scroll">
            @foreach (var clase in Model)
            {
                <div class="item-clase">
                    <strong style="font-size: 16px; color: #8000aa;">@clase.Nombre</strong>

                    <span style="font-size: 13px; color: #555; margin-bottom: 5px;">
                        @clase.Descripcion
                    </span>

                    <ul style="margin: 0; padding-left: 16px; font-size: 13px; color: #333;">
                        <li><strong>Horario:</strong> @clase.HorarioInicio - @clase.HorarioFin</li>
                        <li><strong>Día:</strong> @clase.Fecha</li>
                        <li><strong>Cupos:</strong> @clase.CuposLimites</li>
                        <li><strong>Entrenador:</strong> @clase.CedulaEntrenador</li>
                        <li><strong>Estado:</strong> @clase.Estado</li>
                    </ul>

                    <div class="botones-clase">
                        <a asp-action="Cancelar" asp-route-id="@clase.Id" class="btn-clonar">CANCELAR</a>
                        <a asp-action="Programar" asp-route-id="@clase.Id" class="btn-clonar">PROGRAMAR</a>
                    </div>

                </div>
            }

        </div>

        <div class="botones">
            <a asp-controller="Administrador" asp-action="InicioAdmin" class="btn salir">SALIR</a>
        </div>
    </div>
</body>
</html>
